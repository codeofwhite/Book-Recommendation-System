{
  "name": "mysql-user-engagement-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",
    "database.hostname": "user_engagement_mysql_db", 
    "database.port": "3306",
    "database.user": "debezium", 
    "database.password": "dbz",  
    "database.server.id": "2000", 
    "database.server.name": "user_engagement_db_cdc", 
    "database.include.list": "book_engagement", 
    "database.history.kafka.bootstrap.servers": "kafka:29092",
    "database.history.kafka.topic": "dbhistory.user_engagement", 
    "database.history.internal.kafka.replication.factor": "1",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:29092",
    "schema.history.internal.kafka.topic": "dbhistory.user_engagement.internal", 
    "table.include.list": "book_engagement.*", 
    "include.schema.changes": "true",
    "topic.prefix": "user_engagement_db_cdc", 
    "snapshot.mode": "initial",
    "topic.creation.default.replication.factor": "1",
    "topic.creation.default.partitions": "1",
    "topic.creation.default.cleanup.policy": "delete"
  }
}